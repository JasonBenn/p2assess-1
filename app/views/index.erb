<div class="container">
  <h1>User Skills and Levels</h1>
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Skill</td>
        <td>Years</td>
        <td>Formal?</td>
      </tr>
    </thead>
  <% @users.each do |user| %>
    <tr>
      <td rowspan="<%= user.proficiencies.count %>"><%= user.name %></td>
      <% user.proficiencies.each do |skill| %>
        <td><%= Skill.find(skill.skill_id).name %> (<%= Skill.find(skill.skill_id).context %>)</td>
        <td><%= skill.years %></td>
        <td><%= skill.formal == 1 ? "Yes" : "No" %></td>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>
